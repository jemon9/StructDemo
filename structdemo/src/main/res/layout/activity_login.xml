<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.heyha.www.structdemo.login.LoginActivity">

    <ImageView
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:background="@mipmap/logo"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="200dp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_name"
        android:layout_width="@dimen/login_input_width"
        android:layout_height="@dimen/login_input_height"
        android:layout_centerInParent="true">

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/login_input"
            android:hint="@string/username_hint"
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_pswd"
        android:layout_width="@dimen/login_input_width"
        android:layout_height="@dimen/login_input_height"
        android:layout_below="@id/input_layout_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/login_margin_top2">

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/login_input"
            android:hint="@string/password_hint"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"/>
    </android.support.design.widget.TextInputLayout>

    <RelativeLayout
        android:layout_width="@dimen/login_input_width"
        android:layout_height="@dimen/login_input_height"
        android:layout_below="@id/input_layout_pswd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/login_margin_top2">

        <Button
            android:id="@+id/login_btn"
            android:layout_width="80dp"
            android:layout_height="@dimen/login_input_height"
            android:layout_alignParentLeft="true"
            android:background="@color/orange"
            android:text="登陆"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/login_reg"
            android:layout_width="80dp"
            android:layout_height="@dimen/login_input_height"
            android:layout_alignParentRight="true"
            android:background="@color/orange"
            android:text="注册"
            android:textSize="24sp"/>
    </RelativeLayout>


</RelativeLayout>
